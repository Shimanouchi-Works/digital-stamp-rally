@page
@model AppIndexModel
@{
    ViewData["Title"] = "ホーム";
    ViewData["Description"] =
    "無料でQRスタンプラリーを作成できます。イベント情報と掲示場所を入力するだけで、掲示用QRコードをPDFで発行。登録不要で簡単に導入できます。";
}

<div class="container py-4">
    <div class="mb-4">
        <h1 class="h3 fw-bold">デジタルスタンプラリー</h1>
        <p class="text-muted mb-0">
            無料・アカウント不要。イベント用のQRコードPDFを作成できます。
        </p>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <div class="row g-3">
        <!-- 新規作成 -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h5 fw-bold">新しいスタンプラリーを作成</h2>
                    <p class="text-muted">
                        イベント情報と掲示場所を入力して、掲示用QRコードPDFを出力します。
                    </p>

                    <a class="btn btn-primary" asp-page="/App/CreateNew">
                        新しいスタンプラリーを作成
                    </a>
                </div>
            </div>
        </div>

        <!-- 読み出し -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h2 class="h5 fw-bold">以前作ったスタンプラリーを読み出す</h2>
                    <p class="text-muted">
                        以前出力した@($"{DigitalStampRally.Models.AppConst.AppName}プロジェクトファイル") <code>.qmkpj</code> を選択して読み込みます。
                    </p>

                    <form method="post" enctype="multipart/form-data" asp-page-handler="Load" class="mt-3">
                        <div class="mb-3">
                            @* <label class="form-label">@($"{DigitalStampRally.Models.AppConst.AppName} プロジェクトファイル(qmkpj)")</label> *@
                            @* <input class="form-control" type="file" name="projectFile" accept=".json,application/json" required /> *@
                            <input class="form-control" type="file" name="projectFile" accept=".zip,.qmkpj" required />
                            <div class="form-text">
                                ※ 最大 10MB まで
                            </div>
                        </div>

                        <button class="btn btn-outline-primary" type="submit">
                            読み出す
                        </button>
                    </form>

                    @* @if (!string.IsNullOrWhiteSpace(Model.LoadedToken))
                    {
                        <div class="alert alert-success mt-3 mb-0">
                            読み込み準備ができました。<a class="alert-link" asp-page="/CreateNew?load=@Model.LoadedToken">作成画面へ移動</a>
                        </div>
                    } *@
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <div class="small text-muted">
        注意：
        <ul>
            <li>スタンプ読み取りには通信が必要です</li>
            <li>スタンプのQRコードは全て、同じ端末（同じブラウザ）で開いてください</li>
        </ul>
    </div>
</div>
