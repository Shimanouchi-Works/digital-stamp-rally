@page
@model IndexModel
@{
    ViewData["Title"] = $"{DigitalStampRally.Models.AppConst.AppName}｜無料・登録不要で数分作成";
    // _Layout.cshtml 側で Bootstrap 5 を読み込んでいる前提です。
    // CTAリンク先はあとで実際のページに合わせて変更してください（下に「TODO」コメントあり）。
    ViewData["Description"] =
    "Qみっけは、小規模イベント向けの無料QRスタンプラリー作成ツールです。登録不要で今すぐ作成可能。発行されたQRコードを掲示するだけで、来場者はスマホでスタンプを集められます。";

}

<style>
    /* === LP専用の軽い装飾（Bootstrap前提） === */
    :root{
        --lp-grad-1: rgba(13,110,253,.10);
        --lp-grad-2: rgba(32,201,151,.10);
    }
    .lp-hero{
        background: radial-gradient(1200px 500px at 20% 10%, var(--lp-grad-1), transparent 60%),
                    radial-gradient(900px 400px at 80% 0%, var(--lp-grad-2), transparent 55%),
                    linear-gradient(180deg, rgba(248,249,250,1), rgba(255,255,255,1));
        border-bottom: 1px solid rgba(0,0,0,.06);
    }
    .lp-pill{
        border: 1px solid rgba(0,0,0,.08);
        background: rgba(255,255,255,.75);
        backdrop-filter: blur(6px);
    }
    .lp-section{
        padding: 3.25rem 0;
    }
    .lp-section-title{
        letter-spacing: .02em;
    }
    .lp-muted{
        color: rgba(33,37,41,.70);
    }
    .lp-shadow-soft{
        box-shadow: 0 10px 30px rgba(0,0,0,.08);
    }
    .lp-card{
        border: 1px solid rgba(0,0,0,.08);
        border-radius: 1rem;
    }
    .lp-step{
        border-left: 4px solid rgba(13,110,253,.35);
        padding-left: 1rem;
    }
    .lp-kicker{
        font-weight: 700;
        letter-spacing: .08em;
        text-transform: uppercase;
        font-size: .8rem;
    }
    .lp-cta-sticky{
        position: sticky;
        bottom: 0;
        z-index: 1020;
        background: rgba(255,255,255,.92);
        backdrop-filter: blur(8px);
        border-top: 1px solid rgba(0,0,0,.08);
    }

    .lp-pill .badge{
        background: #fff;
        border: 1px solid rgba(0,0,0,.15);
        color: #212529;
        font-weight: 600;
    }

    .badge {
        display: inline-block;
        background: #fff;
        color: #212529;
        border: 1px solid rgba(0,0,0,.15);
        border-radius: 999px;
        padding: 4px 10px;
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.03em;
        box-shadow: 0 1px 2px rgba(0,0,0,0.15);
    }
</style>

